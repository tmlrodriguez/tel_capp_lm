<odoo>
    <record id="loan_type_list_view" model="ir.ui.view">
        <field name="name">type.list</field>
        <field name="model">loan.manager.type</field>
        <field name="arch" type="xml">
            <list string="Tipos de Prestamos">
                <field name="loan_name"/>
                <field name="disburse_account"/>
                <field name="interest_account"/>
                <field name="interest_rate_display"/>
                <field name="max_amount"/>
            </list>
        </field>
    </record>

<record id="loan_type_form_view" model="ir.ui.view">
    <field name="name">type.form</field>
    <field name="model">loan.manager.type</field>
    <field name="arch" type="xml">
        <form string="Tipo de Préstamo">
            <sheet>
                <div class="oe_title">
                    <label for="loan_name" class="oe_edit_only"/>
                    <h1>
                        <field name="loan_name" required="1"/>
                    </h1>
                </div>
                <group string="Información General" col="2">
                    <field name="description"/>
                    <field name="tenure_plan"/>
                    <field name="max_tenure"/>
                    <field name="max_amount"/>
                    <field name="amortization_method"/>
                </group>
                <group string="Criterios y Documentación Requerida" col="2">
                    <field name="documents" widget="many2many_tags" options="{'no_create': True}" colspan="2"/>
                    <field name="criteria" colspan="2" placeholder="Describe los criterios para aprobar este tipo de préstamo..."/>
                </group>
               <notebook>
                    <page string="Interés">
                        <group string="Tasa de Interés y Cuenta Contable" col="2">
                            <field name="interest_rate"/>
                            <field name="interest_account"/>
                        </group>
                    </page>
                    <page string="Desembolso">
                        <group string="Desembolso" col="2">
                            <field name="disburse_account"/>
                            <field name="disburse_bank_account"/>
                        </group>
                        <group string="Comisión por Desembolso" col="2">
                            <field name="disburse_commission"/>
                            <field name="disburse_commission_account"/>
                        </group>
                        <group string="Comisión por Pago Anticipado">
                            <field name="anticipated_payment_commission"/>
                            <field name="anticipated_payment_commission_account"/>
                        </group>
                    </page>
                    <page string="Gastos y Seguros">
                        <group string="Gastos Legales y Seguro de Vida" col="2">
                            <field name="legal_expenses"/>
                            <field name="legal_expenses_account"/>
                            <field name="life_insurance"/>
                            <field name="life_insurance_account"/>
                        </group>
                    </page>
                   <page string="Cuotas">
                        <group string="Pago de Prestamo" col="2">
                            <field name="payment_account"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>

    <record id="types_action" model="ir.actions.act_window">
        <field name="name">Tipos de Prestamos</field>
        <field name="res_model">loan.manager.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="loan_type_list_view"/>
    </record>
</odoo>